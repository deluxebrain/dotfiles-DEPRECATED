#!/usr/bin/env bash

# Terminal and related
brew cask install iterm2
brew cask install alfred

# Environment
brew cask install flux            # f.lux
brew cask install spectacle       # window manager

# Powertools
# these dont work in macos sierra
# karabiner
# seil

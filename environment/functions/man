# Unify help and man
# http://unix.stackexchange.com/a/18088/77581
function man() 
{
	case "$(type -t "$1")" in
		# ${parameter:-word}
		#+ If 'parameter' is unset or null use the expansion of 'word'
		builtin) help "$1" | "${PAGER:-less}";;		# builtin
		*) command -p man "$@";;			# external command  
	esac
}

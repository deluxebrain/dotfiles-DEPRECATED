unset msg_info
function msg_info() 
{
        printf " [ ${PEN_INFO}..${PEN_RESET} ] $1\n"
}
export -f msg_info && readonly -f msg_info

unset msg_prompt
function msg_prompt() 
{
        printf " [ ${PEN_INFO}?${PEN_RESET} ] $1\n"
}
export -f msg_prompt && readonly -f msg_prompt

unset msg_ok
function msg_ok() 
{
        printf " [ ${PEN_OK}OK${PEN_RESET} ] $1\n"
}
export -f msg_ok && readonly -f msg_ok

unset msg_warn
function msg_warn()
{
	printf " [ ${PEN_WARN}WARNING${PEN_RESET} ] $1\n"
}
export -f msg_warn && readonly -f msg_warn

unset msg_error
function msg_error()
{
	printf " [ ${PEN_ALERT}ERROR${PEN_RESET} ] $1\n"
}
export -f msg_error && readonly -f msg_error

unset fail
function fail() 
{
        printf " [ ${PEN_ALERT}FAIL${PEN_RESET} ] $1\n"
        exit 1
}
export -f fail && readonly -f fail


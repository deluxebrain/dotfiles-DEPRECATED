#  Make vim the default editor
export EDITOR='vim';

#-------------------------------------------------------------
# Language defaults
#-------------------------------------------------------------

export LANG='en_GB.UTF-8'
export LC_ALL='en_GB.UTF-8'

#-------------------------------------------------------------
# Bash history
#-------------------------------------------------------------

export HISTSIZE='32768'
export HISTFILESIZE="${HISTSIZE}"
# Omit duplicates and command that begin with a space
export HISTCONTROL='ignoreboth'

#-------------------------------------------------------------
# Node
#-------------------------------------------------------------

# Enable REPL history
export NODE_REPL_HISTORY=~/.node_history;
export NODE_REPL_HISTORY_SIZE='32768'
export NODE_REPL_MODE='sloppy'

#-------------------------------------------------------------
# Tailoring 'less'
#-------------------------------------------------------------

alias more='less'
export PAGER=less

# Dont clear screen after quitting a man page
export MANPAGER='less -X';

# LESS man pages colors
# http://unix.stackexchange.com/questions/108699/documentation-on-less-termcap-variables/108840#108840
export LESS_TERMCAP_mb=${PEN_BOLD}${FG_GREEN} # start blink
export LESS_TERMCAP_md=${PEN_BOLD}${FG_RED} # start bold 
export LESS_TERMCAP_me=${PEN_RESET} # turn off bold, blink and underline
export LESS_TERMCAP_so=${PEN_BOLD}${FG_YELLOW}${BG_BLUE} # start standout (reverse video)
export LESS_TERMCAP_se=${PEN_RESET} # stop standout
export LESS_TERMCAP_us=${PEN_UNDERLINE_START}${PEN_BOLD}${FG_WHITE} # start underline
export LESS_TERMCAP_ue=${PEN_RESET}
 

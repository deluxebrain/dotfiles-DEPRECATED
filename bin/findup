#!/bin/bash

# Locate a specific file or directory in parent directories

function main() 
{
	local cwd=$(pwd -P 2>/dev/null || command pwd)
	while [ ! -e "${cwd}/$1" ]; do	
		# ${string%substring}
		#+ Deletes the shortest match of $substring
		#+ from the back of $string
		cwd=${cwd%/*}
		if [ ! "$cwd" ]; then break; fi
	done
	echo "$cwd"
}

cwd=$(main) || exit 1

echo $cwd
